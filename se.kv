#:kivy 1.0.9

<SocketExpress>
    history: dialog
    out_text: texter
    send_button: send_button

    Dialog:
        id: dialog
        width: root.width
        height: root.height - root.out_text.height
        top: root.height

    Texter:
        id: texter
        x: root.x
        width: root.width - root.send_button.width
        height: root.send_button.height

    Button:
        id: send_button
        x: root.width - self.width
        width: 100
        text: "Send"
        height: 50

<Dialog>


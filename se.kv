#:kivy 1.0.9

<SocketExpress>
    history: dialog
    out_text: texter
    send_button: send_button

    Dialog:
        id: dialog
        center: root.center
        width: root.width
        top: root.top
        height: root.height - root.out_text.height

    Texter:
        id: texter
        x: root.x
        width: root.width * 5/6
        height: 50

    Button:
        id: send_button
        x: root.width - self.width
        width: root.width/6

        text: "Send"
        height: 50

<Dialog>

